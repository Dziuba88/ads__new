extends models/default
block head
  - curent_page = 'Advert Campaigns'
  include components/head
block header
  include components/navbar  
block main
  .container
    .row
      .col.lg-10.offset-lg-1
        nav.filters
          ul
            li.filters--title Show data for
            li: a(href="#").active All time
            li: a(href="#") Today
            li: a(href="#") Yesterday
            li: a(href="#") Week
            li: a(href="#") Month
            li: a(href="#") Section
            li: a(href="#") Year
            li: form.filters-datepicker
              input(type="text", name="daterange")
              i.material-icons.placeholder &#xE24F;
        .row
          .col.md-6.lg-5
            .panel
              .panel--header
                h3 345 322 Impressions
                  small.t--success +12 032
                .dropdown.right
                  .material-icons.dropdown-toggle(data-toggle="dropdown") settings
                  ul.dropdown-menu(aria-labelledby='dLabel')
                    li.active: a(href="#", title="All time") All time
                    li: a(href="#", title="Today") Today
                    li: a(href="#", title="Yesterday") Yesterday
                    li: a(href="#", title="Today") Today
                    li: a(href="#", title="Week") Week
              .panel--body: #chart1(style="width: 100%; height: 186px;")
          .col.md-6.lg-5
            .panel
              .panel--header
                h3 345 332 Transitions
                  small.t--danger -12 032
                .dropdown.right
                  .material-icons.dropdown-toggle(data-toggle="dropdown") settings
                  ul.dropdown-menu(aria-labelledby='dLabel')
                    li.active: a(href="#", title="All time") All time
                    li: a(href="#", title="Today") Today
                    li: a(href="#", title="Yesterday") Yesterday
                    li: a(href="#", title="Today") Today
                    li: a(href="#", title="Week") Week
              .panel--body: #chart2(style="width: 100%; height: 186px;")
          .col.lg-2
            .panel
              .stats
                .stats--body
                  .stats--title CTR
                    span.t--danger -0.001 %
                  .stats--count  0.012 %
                  #column1(style="width: 100%; height: 55px;")
                .stats--body
                  .stats--title Потрачено
                    span.t--success -12 224
                  .stats--count $ 122 442.33
                  #column2(style="width: 100%; height: 55px;")
        // Compains table //
        table.table.responsive.table--campaign
          caption
            span Payments history
            a.btn.btn--success Add campaign

          thead
            tr
              th Status
              th Campaign  
              th Format  
              th Rate  
              th Spent  
              th: span.tooltip-bottom(data-tooltip="Click-through rate (CTR) is the ratio of users who click on a specific link to the number of total users who view a page, email, or advertisement.") 
                span CTR  
                span: i.material-icons info_outline
              th Impressions  
              th Clicks  
              th Edit 
          - for (var x = 1; x < 5; x++)
            tbody
              tr
                td(data-title='Status')
                  .switch
                    input.switch__ctrl(checked type='checkbox' id='company__' + x)
                    label.switch__lbl(for='company__' + x) 
                td(data-title='Campaign')
                  span.campaign__title CandyCrash на флеше
                    small: a(href="") http://inxyads.com/advertiser/statistics/advertiser/statistics
                td(data-title='Format')
                  span.company__format Branding
                    small mobile
                td(data-title='Rate')
                  span= '$ ' + (Math.ceil(( Math.random() * 1.5 )*100)/100)
                    small CPA
                td(data-title='Spent')
                  span.company__spent= '$ ' + (Math.ceil(( Math.random() * (x + 125) )*100)/100)
                td(data-title='CTR')
                  span= (12 * x / 1000) + ' %'
                td(data-title='Impressions')
                  span= Math.floor(Math.random()*1000)
                td(data-title='Clicks')
                  span= Math.floor(Math.random()*300)
                td: a.material-icons(href="campaign__detail.html") settings
