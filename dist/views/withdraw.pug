extends models/default
block head
  - curent_page = 'Withdraw funds'
  include components/head
block header
  include components/navbar
block main
  .container.addfunds
      .row
        .col.lg-10.offset-lg-1
          .row
            .col.lg-7
              h2.page-title Enter amount to withdraw
              .panel
                form.form.form--validate
                  .row
                    .col.sm-4.md-3
                      .form--row
                        label Вывести
                        .select
                          input(type="text" placeholder="Выберите" required readonly).select--toggle
                          i.material-icons keyboard_arrow_down
                          ul.select--menu
                            li.active: a(data-label='Сумма') Сумма
                            li: a(data-label='% от суммы на счёте') % от суммы на счёте
                    .col.sm-4.md-3
                      .form--row
                        label Сумма
                        input(type="tel" required)
                    .col.sm-8.md-6
                      .form--row
                        label Со счёта
                        .select
                          input(type="text" placeholder="Выберите" required readonly).select--toggle
                          i.material-icons keyboard_arrow_down
                          ul.select--menu
                            li: a(data-label='$ 122,3 — Название счёта') $ 122,3 — Название счёта
                            li: a(data-label='$ 122,3 — Название счёта') € 56,4 — Название счёта
                  .row
                    .col.sm-8.md-6
                      .form--row
                        label Куда вывести
                        .select
                          input(type="text" placeholder="Выберите" required readonly).select--toggle
                          i.material-icons keyboard_arrow_down
                          ul.select--menu
                            li: a(data-label='PayPal') PayPal
                            li: a(data-label='Skrill') Skrill
                            li: a(data-label='Paxum') Paxum
                            li: a(data-label='Payoneer') Payoneer
                            li: a(data-label='Payza') Payza
                            li: a(data-label='Epayments') Epayments
                            li: a(data-label='eCoin') eCoin
                            li: a(data-label='Webmoney') Webmoney

                  .form--controls
                    button.btn.btn--success(type="submit") Вывести средства
                    span.t--mutted с вами свяжется менеджер <br>и уточнит реквизиты
            .col.lg-5
              h3.page-title Your accounts
              table.table.responsive.table--funds
                tbody
                  tr
                    td.funds $ 122 442.33
                    td 
                      span Название счёта
                      span.t--mutted хватит на 12 дней
                    td: a(href="") Вывести деньги
                    td: a.material-icons(href="") settings
                tbody
                  tr
                    td.funds € 23.89
                    td 
                      span Название счёта
                      span.t--mutted хватит на 12 дней
                    td: a(href="") Вывести деньги
                    td: a.material-icons(href="") settings
          // History table //
          h2.table-title Payments history
          nav.filters
            ul
              li: a(href="#").active All time
              li: a(href="#") Today
              li: a(href="#") Yesterday
              li: a(href="#") Week
              li: a(href="#") Month
              li: a(href="#") Section
              li: a(href="#") Year
              li: form.filters-datepicker
                input(type="text", name="daterange")
                i.material-icons.placeholder &#xE24F;
          table.table.responsive.table--history              
            thead
              tr
                th Date
                th Type
                th Status  
                th Documents
                th Amount  
                th Balance 
            tbody
              - for (var x = 1; x < 2; x++)
                tr
                  td(data-title='Date') #{12 + x}.05.2017              
                  td(data-title='Type') Refill
                  td(data-title='Status'): span.t--success Completed
                  td(data-title='Documents'): a(href="") Invoice #{346632+x}
                  td(data-title='Amount'):  span.t--success= '$ ' + (Math.ceil(( Math.random() * (x + 125) )*100)/100)
                  td(data-title='Balance'): strong= '$ ' + (Math.ceil(( Math.random() * (x + 125) )*100)/100)
              tr
                td(data-title='Date') 14.05.2017              
                td(data-title='Type') Refill
                td(data-title='Status'): span.t--danger Not Completed
                td(data-title='Documents') —
                td(data-title='Amount'):  span.t--danger= '$ ' + (Math.ceil(( Math.random() * 125 )*100)/100)
                td(data-title='Balance'): strong= '$ ' + (Math.ceil(( Math.random() * 125 )*100)/100)
              - for (var x = 1; x < 10; x++)
                tr
                  td(data-title='Date') #{14 + x}.05.2017              
                  td(data-title='Type') Refill
                  td(data-title='Status'): span.t--success Completed
                  td(data-title='Documents'): a(href="") Invoice #{346632+x}
                  td(data-title='Amount'):  span.t--success= '$ ' + (Math.ceil(( Math.random() * (x + 125) )*100)/100)
                  td(data-title='Balance'): strong= '$ ' + (Math.ceil(( Math.random() * (x + 125) )*100)/100)
