extends models/default
block head
  - curent_page = 'Add funds'
  include components/head
block header
  include components/navbar
block main
  .container.addfunds
      .row
        .col.lg-10.offset-lg-1
          .row
            .col.md-7
              h2.page-title Select payment method
              .panel.payments
                .row
                  .payments--method: a(href=""): img(src="img/ic_paypal.svg", alt="")
                  .payments--method: a(href=""): img(src="img/ic_skrill.svg", alt="")
                  .payments--method: a(href=""): img(src="img/ic_paxum.svg", alt="")
                  .payments--method: a(href=""): img(src="img/ic_payoneer.svg", alt="")
                  .payments--method: a(href=""): img(src="img/ic_payza.svg", alt="")
                  .payments--method: a(href=""): img(src="img/ic_epayments.svg", alt="")
                  .payments--method: a(href=""): img(src="img/ic_webmoney.svg", alt="")
            .col.md-5
              h3.page-title Your accounts
              table.table.responsive.table--funds
                tbody
                  tr
                    td.funds $ 122 442.33
                    td 
                      span Название счёта
                      span.t--mutted хватит на 12 дней
                    td: a(href="withdraw.html") Вывести деньги
                    td: a.material-icons(href="") settings
                tbody
                  tr
                    td.funds € 23.89
                    td 
                      span Название счёта
                      span.t--mutted хватит на 12 дней
                    td: a(href="withdraw.html") Вывести деньги
                    td: a.material-icons(href="") settings
          // History table //
          h2.table-title Payments history
          nav.filters
            ul
              li: a(href="#").active All time
              li: a(href="#") Today
              li: a(href="#") Yesterday
              li: a(href="#") Week
              li: a(href="#") Month
              li: a(href="#") Section
              li: a(href="#") Year
              li: form.filters-datepicker
                input(type="text", name="daterange")
                i.material-icons.placeholder &#xE24F;
          table.table.responsive.table--history              
            thead
              tr
                th Date
                th Type
                th Status  
                th Documents
                th Amount  
                th Balance 
            tbody
              - for (var x = 1; x < 2; x++)
                tr
                  td(data-title='Date') #{12 + x}.05.2017              
                  td(data-title='Type') Refill
                  td(data-title='Status'): span.t--success Completed
                  td(data-title='Documents'): a(href="") Invoice #{346632+x}
                  td(data-title='Amount'):  span.t--success= '$ ' + (Math.ceil(( Math.random() * (x + 125) )*100)/100)
                  td(data-title='Balance'): strong= '$ ' + (Math.ceil(( Math.random() * (x + 125) )*100)/100)
              tr
                td(data-title='Date') 14.05.2017              
                td(data-title='Type') Refill
                td(data-title='Status'): span.t--danger Not Completed
                td(data-title='Documents') —
                td(data-title='Amount'):  span.t--danger= '$ ' + (Math.ceil(( Math.random() * 125 )*100)/100)
                td(data-title='Balance'): strong= '$ ' + (Math.ceil(( Math.random() * 125 )*100)/100)
              - for (var x = 1; x < 10; x++)
                tr
                  td(data-title='Date') #{14 + x}.05.2017              
                  td(data-title='Type') Refill
                  td(data-title='Status'): span.t--success Completed
                  td(data-title='Documents'): a(href="") Invoice #{346632+x}
                  td(data-title='Amount'):  span.t--success= '$ ' + (Math.ceil(( Math.random() * (x + 125) )*100)/100)
                  td(data-title='Balance'): strong= '$ ' + (Math.ceil(( Math.random() * (x + 125) )*100)/100)
