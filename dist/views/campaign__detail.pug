extends models/default
block head
  - curent_page = 'Edit Campaign'
  include components/head
block header
  include components/navbar--child
block main
  .container
    .row
      .col.lg-10.offset-lg-1
        h1.page-title CandyCrash на флеше
          .switch
            input.switch__ctrl(checked type='checkbox' id='company__' + x)
            label.switch__lbl(for='company__' + x)                
        nav.filters
          ul
            li.filters--title Show data for
            li: a(href="#").active All time
            li: a(href="#") Today
            li: a(href="#") Yesterday
            li: a(href="#") Week
            li: a(href="#") Month
            li: a(href="#") Section
            li: a(href="#") Year
            li: form.filters-datepicker
              input(type="text", name="daterange")
              i.material-icons.placeholder &#xE24F;
        .row
          .col.lg-10
            .row
              .col.md-6
                .panel
                  .panel--header
                    h3 345 322 Impressions
                      small.t--success +12 032
                    .dropdown.right
                      .material-icons.dropdown-toggle(data-toggle="dropdown") settings
                      ul.dropdown-menu(aria-labelledby='dLabel')
                        li.active: a(href="#", title="All time") All time
                        li: a(href="#", title="Today") Today
                        li: a(href="#", title="Yesterday") Yesterday
                        li: a(href="#", title="Today") Today
                        li: a(href="#", title="Week") Week
                  .panel--body: #chart1(style="width: 100%; height: 186px;")
              .col.md-6
                .panel
                  .panel--header
                    h3 345 332 Transitions
                      small.t--danger -12 032
                    .dropdown.right
                      .material-icons.dropdown-toggle(data-toggle="dropdown") settings
                      ul.dropdown-menu(aria-labelledby='dLabel')
                        li.active: a(href="#", title="All time") All time
                        li: a(href="#", title="Today") Today
                        li: a(href="#", title="Yesterday") Yesterday
                        li: a(href="#", title="Today") Today
                        li: a(href="#", title="Week") Week
                  .panel--body: #chart2(style="width: 100%; height: 186px;")
              .col.md-6
                .panel
                  .panel--header
                    h3 0,012% CTR
                      small.t--success +0,002%
                    .dropdown.right
                      .material-icons.dropdown-toggle(data-toggle="dropdown") settings
                      ul.dropdown-menu(aria-labelledby='dLabel')
                        li.active: a(href="#", title="All time") All time
                        li: a(href="#", title="Today") Today
                        li: a(href="#", title="Yesterday") Yesterday
                        li: a(href="#", title="Today") Today
                        li: a(href="#", title="Week") Week
                  .panel--body: #chart3(style="width: 100%; height: 186px;")
              .col.md-6
                .panel
                  .panel--header
                    h3 122,5 $ Spent
                      small.t--danger +8,67%
                    .dropdown.right
                      .material-icons.dropdown-toggle(data-toggle="dropdown") settings
                      ul.dropdown-menu(aria-labelledby='dLabel')
                        li.active: a(href="#", title="All time") All time
                        li: a(href="#", title="Today") Today
                        li: a(href="#", title="Yesterday") Yesterday
                        li: a(href="#", title="Today") Today
                        li: a(href="#", title="Week") Week
                  .panel--body: #chart4(style="width: 100%; height: 186px;")
          .col.lg-2.sidebar
            .panel
              h2 Параметры кампании
              p
                span.t--mutted Рекламируем страницу
                span.campaign__link http: //inxyads.com /advertiser /statistics
              p
                span.t--mutted Траффик
                span Компьютеры
              p
                span.t--mutted Формат
                span PopUnder
              p
                span.t--mutted CPA  
                  i.material-icons.tooltip-bottom(data-tooltip="Lorem ipsum dolor sit amet, consectetur adipisicing elit.") info_outline
                span $ 3.2
              p
                span.t--mutted Лимит
                span Не задан
              a.btn.btn--success.block edit
        // History table //
        table.table.responsive.table--history
          caption
            span Payments history
          thead
            tr
              th Date
              th CPA  
                span.tooltip-bottom(data-tooltip="Lorem ipsum dolor sit amet, consectetur adipisicing elit."): i.material-icons info_outline
              th Spent  
              th CTR  
                span.tooltip-bottom(data-tooltip="Lorem ipsum dolor sit amet, consectetur adipisicing elit."): i.material-icons info_outline
              th Impressions  
              th Clicks  
          tbody
            - for (var x = 1; x < 20; x++)
              tr
                td(data-title='Date') 12.05.2017              
                td(data-title='CPA')
                  span.company__spent= '$ ' + (Math.ceil(( Math.random() * (x + 125) )*100)/100)
                td(data-title='Spent')
                  span.company__spent= '$ ' + (Math.ceil(( Math.random() * (x + 125) )*100)/100)
                td(data-title='CTR')
                  span= (12 * x / 1000) + ' %'
                td(data-title='Impressions')
                  span= Math.floor(Math.random()*100000)
                td(data-title='Clicks')
                  span= Math.floor(Math.random()*30000)
